    private void cadastrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
    CLI CLI = new CLI();
    ExibeCadastro EXI = new ExibeCadastro();
        
    if ((nome.getText().equals("")) && (cpf.getText().equals("")) && (endereco.getText().equals("")) && (titulo.getText().equals("")) && (inicio.getText().equals("")) && (fim.getText().equals(""))){
    JOptionPane.showMessageDialog(null, "Não pode haver campos em branco! \n"+
                                        "Preenche-os corretamente!");
        nome.setText("");
        cpf.setText("");
        endereco.setText("");
        titulo.setText("");
        inicio.setText("");
        fim.setText("");

        } else {
            
        String url = "jdbc:mysql://localhost/projetointegrador";
        String sql = "INSERT INTO clientes VALUES(null,'"+nome.getText()+"','"+cpf.getText()+"','"+endereco.getText()+"','"+titulo.getText()+"','"+inicio.getText()+"', '"+fim.getText()+"')";
        
        try
        {
            Connection conexao = DriverManager.getConnection(url,"root","");
            PreparedStatement inserir = conexao.prepareStatement(sql);
            inserir.executeUpdate();
            JOptionPane.showMessageDialog(null, "Cadastrado com sucesso!");
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null, "Erro na Conexão com Banco."+erro);
    }
        CLI.setNome(nome.getText());
        CLI.setCpf(cpf.getText());
        CLI.setEndereco(endereco.getText());
        CLI.setTitulo(titulo.getText());
        CLI.setInicio(inicio.getText());
        CLI.setFim(fim.getText());

        EXI.exportarDados(CLI);
        EXI.setVisible(true);
}
    }                                         

