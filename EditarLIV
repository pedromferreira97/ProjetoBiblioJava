    private void editarActionPerformed(java.awt.event.ActionEvent evt) {                                       
        MenuOpcoes MEN = new MenuOpcoes();
        String Opt = JOptionPane.showInputDialog("Qual dado deseja mudar? "+"\n"+
                                                "1 - Autor"+"\n"+
                                                "2 - Título"+"\n"+
                                                "3 - ISBN"+"\n"+
                                                "4 - Editora"+"\n"+
                                                "5 - Volume"+"\n"+
                                                "6 - Quantidade"+"\n"+
                                                "7 - Status"+"\n"+
                                                "8 - Prateleira"+"\n"+
                                                "9 - Corredor"+"\n");
        
        switch (Opt) {
            
            case "1":
        String tit = JOptionPane.showInputDialog ("Insira o título do livro: ");        
        String autnovo = JOptionPane.showInputDialog ("Insira o novo autor: ");
        String url = "jdbc:mysql://localhost/projetointegrador";
        String sql = "UPDATE livro set autor='"+autnovo+"' where titulo='"+tit+"'";
        try {
            Connection conexao = DriverManager.getConnection(url,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        break;
            
            case "2":
        String titantigo = JOptionPane.showInputDialog ("Insira o título a mudar: ");
        String titnovo = JOptionPane.showInputDialog ("Insira o novo título: ");
        String url2 = "jdbc:mysql://localhost/projetointegrador";
        String sql2 = "UPDATE livro set titulo='"+titnovo+"' where titulo='"+titantigo+"'";
        try {
            Connection conexao = DriverManager.getConnection(url2,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql2);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        break;
            
            case "3":
        String tit2 = JOptionPane.showInputDialog ("Insira o título do livro: ");
        String codnovo = JOptionPane.showInputDialog ("Insira o novo ISBN: ");
        String url3 = "jdbc:mysql://localhost/projetointegrador";
        String sql3 = "UPDATE livro set isbn='"+codnovo+"' where titulo='"+tit2+"'";
        try {
            Connection conexao = DriverManager.getConnection(url3,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql3);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        break;
            
            case "4":
        String tit3 = JOptionPane.showInputDialog ("Insira o título do livro: ");
        String edinova = JOptionPane.showInputDialog ("Insira a nova editora: ");
        String url4 = "jdbc:mysql://localhost/projetointegrador";
        String sql4 = "UPDATE livro set editora='"+edinova+"' where titulo='"+tit3+"'";
        try {
            Connection conexao = DriverManager.getConnection(url4,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql4);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        break;
        
            case "5":
        String tit4 = JOptionPane.showInputDialog ("Insira o título do livro: ");
        String volnovo = JOptionPane.showInputDialog ("Insira o novo volume: ");
        String url5 = "jdbc:mysql://localhost/projetointegrador";
        String sql5 = "UPDATE livro set volume='"+volnovo+"' where titulo='"+tit4+"'";
        try {
            Connection conexao = DriverManager.getConnection(url5,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql5);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        break;
        
            case "6":
        String tit5 = JOptionPane.showInputDialog ("Insira o título do livro: ");
        String quanova = JOptionPane.showInputDialog ("Insira a nova quantidade: ");
        String url6 = "jdbc:mysql://localhost/projetointegrador";
        String sql6 = "UPDATE livro set quantidade='"+quanova+"' where titulo='"+tit5+"'";
        try {
            Connection conexao = DriverManager.getConnection(url6,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql6);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        break;
        
            case "7":
        String tit6 = JOptionPane.showInputDialog ("Insira o título do livro: ");
        String statnovo = JOptionPane.showInputDialog ("Insira o novo status: ");
        String url7 = "jdbc:mysql://localhost/projetointegrador";
        String sql7 = "UPDATE livro set status='"+statnovo+"' where titulo='"+tit6+"'";
        try {
            Connection conexao = DriverManager.getConnection(url7,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql7);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        break;
            
            case "8":
                String tit7 = JOptionPane.showInputDialog ("Insira o título do livro: ");
                String pratnova = JOptionPane.showInputDialog ("Insira a nova prateleira: ");
                String url8 = "jdbc:mysql://localhost/projetointegrador";
                String sql8 = "UPDATE livro set prateleira='"+pratnova+"' where titulo='"+tit7+"'";
        try {
            Connection conexao = DriverManager.getConnection(url8,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql8);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        break;
            
            case "9":
                String tit8 = JOptionPane.showInputDialog ("Insira o título do livro: ");
                String corredor = JOptionPane.showInputDialog ("Insira o novo corredor: ");
                String url9 = "jdbc:mysql://localhost/projetointegrador";
                String sql9 = "UPDATE livro set corredor='"+corredor+"' where titulo='"+tit8+"'";
        try {
            Connection conexao = DriverManager.getConnection(url9,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql9);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
            MEN.setVisible(true);
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }               
}
    }                                      

