    private void cadastrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
    LIV LIV = new LIV();
    ExibeCadastro EXI = new ExibeCadastro();
        
    if ((autor.getText().equals("")) && (titulo.getText().equals("")) && (isbn.getText().equals("")) && (editora.getText().equals("")) && (volume.getText().equals("")) && (quantidade.getText().equals("")) && (status.getText().equals("")) && (prateleira.getText().equals("")) && (estante.getText().equals(""))){
    JOptionPane.showMessageDialog(null, "NÃ£o pode haver campos em branco! \n"+
                                        "Preenche-os corretamente!");
        autor.setText("");
        titulo.setText("");
        isbn.setText("");
        editora.setText("");
        volume.setText("");
        quantidade.setText("");
        status.setText("");
        prateleira.setText("");
        estante.setText("");
        
        } else {
            
        String url = "jdbc:mysql://localhost/projetointegrador";
        String sql = "INSERT INTO livro VALUES(null,'"+autor.getText()+"','"+titulo.getText()+"','"+isbn.getText()+"','"+editora.getText()+"','"+volume.getText()+"', '"+quantidade.getText()+"','"+status.getText()+"','"+prateleira.getText()+"','"+estante.getText()+"')";
        
        try
        {
            Connection conexao = DriverManager.getConnection(url,"root","");
            PreparedStatement inserir = conexao.prepareStatement(sql);
            inserir.executeUpdate();
            JOptionPane.showMessageDialog(null,"Cadastrado com sucesso!");
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na ConexÃ£o com Banco."+erro);
    }
        LIV.setAutor(autor.getText());
        LIV.setTitulo(titulo.getText());
        LIV.setIsbn(isbn.getText());
        LIV.setEditora(editora.getText());
        LIV.setVolume(volume.getText());
        LIV.setQuantidade(quantidade.getText());
        LIV.setStatus(status.getText());
        LIV.setPrateleira(prateleira.getText());
        LIV.setEstante(estante.getText());

        EXI.exportarDados(LIV);
        EXI.setVisible(true);
}
    }                                         

