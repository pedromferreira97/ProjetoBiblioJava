    private void retirarActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String titulo = JOptionPane.showInputDialog("Digite o título a ser retirado: ");
        String cpf = JOptionPane.showInputDialog ("Digite o CPF do/a usuário/a: ");
        String ini = JOptionPane.showInputDialog ("Insira a data de hoje (AAAA-MM-DD): ");
        String dev = JOptionPane.showInputDialog ("Insira a data de devolução (AAAA-MM-DD): ");
        String url = "jdbc:mysql://localhost/projetointegrador";
        String sql = "UPDATE livro set status='Indisponivel', quantidade='0' where titulo='"+titulo+"'";
        
        try
        {
            Connection conexao = DriverManager.getConnection(url,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
        String sql1 = "UPDATE clientes SET titulo='"+titulo+"', inicio='"+ini+"', fim='"+dev+"' WHERE cpf='"+cpf+"'";
            try
        {
            Connection conexao = DriverManager.getConnection(url,"root","");
            PreparedStatement atualizar = conexao.prepareStatement(sql1);
            atualizar.executeUpdate();
            JOptionPane.showMessageDialog(null,"Atualizado com sucesso!");
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
        }
    }                                       

