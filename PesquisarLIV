    private void pesquisarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        MenuADM MEN = new MenuADM();
        String L = JOptionPane.showInputDialog("Digite o título do livro: ");
        String url = "jdbc:mysql://localhost/projetointegrador";
        String sqlP = "SELECT * FROM livro WHERE titulo LIKE '%"+L+"%'";

	    try {
	    Connection conexao = DriverManager.getConnection(url,"root","");
	    PreparedStatement pesquisa = conexao.prepareStatement(sqlP);
	    ResultSet resultado = pesquisa.executeQuery();
	    while (resultado.next()) {
		String titulo  = resultado.getString("titulo");
                String autor = resultado.getString("autor");
                String quantidade = resultado.getString("quantidade");
                
                JOptionPane.showMessageDialog(null, "Dados encontrados com sucesso!\n"+
						                    "------------------------------\n"+
                                                                    "Título: "+titulo+"\n"+
                                                                    "Autor: "+autor+"\n"+
						                    "Cópias disponíveis: "+quantidade+"\n"+ 
						                    "------------------------------");
                
	    }
            MEN.setVisible(true);
        }
            catch(Exception erro) { 
                JOptionPane.showMessageDialog(null, "Erro na Conexão com Banco."+erro);
            }
    }                                         

