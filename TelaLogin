    private void entrarActionPerformed(java.awt.event.ActionEvent evt) {                                       
        MenuOpcoes MEN = new MenuOpcoes();
        try {
            Connection conexao;
            String user = "root";
            String sen = "";
            String url = "jdbc:mysql://localhost/projetointegrador";
            Class.forName("com.mysql.jdbc.Driver");
            conexao = (Connection) DriverManager.getConnection(url,user,sen);
            
            String username = login.getText();
            String password = senha.getText();
   
            PreparedStatement logar = (PreparedStatement) conexao.prepareStatement("SELECT * FROM usuario WHERE login=? and senha=?");
            logar.setString(1, username);
            logar.setString(2,getMd5(password));
            ResultSet pst = logar.executeQuery();
            
            if(pst.next()){
                JOptionPane.showMessageDialog(null, "Acesso Permitido!");
                MEN.setVisible(true);
                login.setText("");
                senha.setText("");
            } else {
                JOptionPane.showMessageDialog(null,"Acesso negado!");
        }
        } catch (SQLException ex) {
            Logger.getLogger(TelaLogin.class.getName()).log(Level.SEVERE, null, ex);
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(TelaLogin.class.getName()).log(Level.SEVERE, null, ex);
    }
    }                                      

