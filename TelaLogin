    private void entrarActionPerformed(java.awt.event.ActionEvent evt) {                                       
        MenuOpcoes MEN = new MenuOpcoes();
        try {
            Connection conexao;
            String user = "root";
            String sen = "";
            String url = "jdbc:mysql://localhost/projetointegrador";
            Class.forName("com.mysql.jdbc.Driver");
            conexao = (Connection) DriverManager.getConnection(url,user,sen);
            
            String username = login.getText();
            String password = senha.getText();
   
            PreparedStatement logar = (PreparedStatement) conexao.prepareStatement("SELECT * FROM usuario WHERE login=? and senha=?");
            logar.setString(1, username);
            logar.setString(2,getMd5(password));
            ResultSet pst = logar.executeQuery();
            
            if(pst.next()){
                JOptionPane.showMessageDialog(null, "Acesso Permitido!");
                MEN.setVisible(true);
                login.setText("");
                senha.setText("");
            } else {
                JOptionPane.showMessageDialog(null,"Acesso negado!");
        }
        } catch (SQLException ex) {
            Logger.getLogger(TelaLogin.class.getName()).log(Level.SEVERE, null, ex);
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(TelaLogin.class.getName()).log(Level.SEVERE, null, ex);
    }
    }                                      

    private void pesquisaActionPerformed(java.awt.event.ActionEvent evt) {                                         
        TelaLogin TEL = new TelaLogin();
        String L = JOptionPane.showInputDialog("Digite o título do livro: ");
        String url = "jdbc:mysql://localhost/projetointegrador";
        String sqlP = "SELECT * FROM livro WHERE titulo LIKE '%"+L+"%'";

	    try {
	    Connection conexao = DriverManager.getConnection(url,"root","");
	    PreparedStatement pesquisa = conexao.prepareStatement(sqlP);
	    ResultSet resultado = pesquisa.executeQuery();
	    while (resultado.next()) {
		String titulo  = resultado.getString("titulo");
                String autor = resultado.getString("autor");
                String quantidade = resultado.getString("quantidade");
                String prat = resultado.getString("prateleira");
                String esta = resultado.getString("estante");
                
                JOptionPane.showMessageDialog(null, "Dados encontrados com sucesso!\n"+
						                    "------------------------------\n"+
                                                                    "Título: "+titulo+"\n"+
                                                                    "Autor: "+autor+"\n"+
						                    "Cópias disponíveis: "+quantidade+"\n"+
                                                                    "Prateleira: "+prat+"\n"+
                                                                    "Estante: "+esta+"\n"+
						                    "------------------------------");
                
	    }
            TEL.setVisible(true);
        }
            catch(Exception erro) { 
                JOptionPane.showMessageDialog(null, "Erro na Conexão com Banco."+erro);
            }
    }                                        

