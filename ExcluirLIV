    private void excluirActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String titulo = JOptionPane.showInputDialog ("Insira o título a ser excluído: ");
        String url = "jdbc:mysql://localhost/projetointegrador";
        String sql = "DELETE FROM livro WHERE titulo='"+titulo+"'";
        
        try {
            Connection conexao = DriverManager.getConnection(url,"root","");
            PreparedStatement excluir = conexao.prepareStatement(sql);
            excluir.executeUpdate();
            JOptionPane.showMessageDialog(null,"Excluído com sucesso!");
        }
        catch(Exception erro){
            JOptionPane.showMessageDialog(null,"Erro na Conexão com Banco."+erro);
    }
    }                                       

